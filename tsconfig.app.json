{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "es2015",
    "types": [],
    "paths": {
      "@src/*": [
        "src/main/angular/*.web",
        "src/main/angular/*"
	  ],
	  "@views/*": [
        "src/main/angular/app/views/*.web",
        "src/main/angular/app/views/*"
	  ]
    }
  },
  "files": [
    "src/main/angular/main.ts",
    "src/main/angular/polyfills.ts"
  ]
}
